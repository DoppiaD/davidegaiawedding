<div class="timeline-container">
  <div class="timeline">
    <ul>
      <li>
        <div class="bullet"></div>
        <div class="timeline-desc">
          <p>Land at:</p>
          <h5><%= @timelineData[:turin][:one][:h5] %></h5>
        </div>
      </li>
      <li>
        <div class="bullet"></div>
        <div class="timeline-desc" data-toggle="modal" data-target="#timelineModal" data-modaltitle='<%= @timelineData[:turin][:two].to_json.html_safe %>' >
          <p>Go to train station:</p>
          <h5><%= @timelineData[:turin][:two][:h5] %></h5>
          <div class="transportation">
            <% @timelineData[:turin][:two][:icons].each do |icon| %>
              <i class="fas fa-<%= icon %>"></i>
            <% end %>
          </div>
        </div>
      </li>
      <li>
        <div class="bullet"></div>
