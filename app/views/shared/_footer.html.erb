<div class="container d-footer text-center text-muted mt-5">
  <p class="border-top"></p>
  <p class="my-5"><%= t('.footer_quote_start') %> <i class="fas fa-heart fa-beat"></i> <%= t('.footer_quote_end') %></p>
  <% if I18n.locale == I18n.default_locale %>
    <%= link_to "ITA", locale: 'it' %>
    <% I18n.locale = params.fetch(:locale, I18n.default_locale).to_sym %>
  <% else %>
    <%= link_to "ENG", locale: nil %>
    <% I18n.locale = params.fetch(:locale, I18n.default_locale).to_sym %>
  <%end%>
</div>
