<div class="home-banner">
  <div class="container">
    <div class="row">
      <div class="col">
        <h1 class="display-1 banner-hero m-1"><%= t('.couple_names') %></h1>
      </div>
    </div>
    <div class="row">
      <div class="col banner-description">
        <p><%= t('.cta_html') %></p>
        <div class="my-3">
          <%= link_to t('.cta_button_text'), guests_path, class: "btn btn-primary", role: 'button' %>
        </div>
        <%= link_to "#chevron-hook", class: "chevron-animate" do %>
          <i class="fas fa-lg fa-chevron-down"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="container text-center info-spacer">
  <div class="row">
    <div class="col wedding-date" id="chevron-hook">
      <h6><%= t('.wedding_cta') %></h6>
      <h1 class="display-1"><%= t('.wedding_date') %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 wedding-data">
      <i class="fas fa-calendar-day fa-3x mb-3"></i>
      <h6 class="text-uppercase"><%= t('.ceremony') %></h6>
      <p> <%= t('.ceremony_info_html') %> </p>
    </div>
    <div class="col-sm-6 wedding-data">
      <i class="fas fa-map-marked-alt fa-3x mb-3"></i>
      <h6 class="text-uppercase"><%= t('.wedding_location') %></h6>
      <p><%= t('.wedding_address_html') %></p>
    </div>
  </div>
</div>
<div class="container-fluid breakimage spacer-image">
</div>
<div class="container info-spacer">
  <div class="row ">
    <div class="col logistics-hero text-center">
      <h2><%= t('.logistics') %></h2>
      <h6><%= t('.logistics_quote') %></h6>
    </div>
  </div>
  <div class="card-deck logistics-home">
    <div class="card d-card-shadow">
      <%= link_to "#{logistics_path}#hotel", class: "stretched-link" do %>
        <%= image_tag("https://via.placeholder.com/400x150", class: "card-img-top")%>
      <% end %>
      <div class="card-body text-center">
        <h5 class="card-title"><%= t('.where_to_stay') %></h5>
        <p class="card-text"><%= t('.wts_description') %></p>
      </div>
    </div>
    <div class="card d-card-shadow">
      <%= link_to "#{logistics_path}#trip", class: "stretched-link" do %>
        <%= image_tag("https://via.placeholder.com/400x150", class: "card-img-top")%>
      <% end %>
      <div class="card-body text-center">
        <h5 class="card-title"><%= t('.arrival_info') %></h5>
        <p class="card-text"><%= t('.arrival_description') %></p>
      </div>
    </div>
  </div>
</div>
