<div class="container">
  <div class="row">
    <div class="col">
      <%= simple_form_for [@guest], remote: true do |f| %>
      <%= f.input :participate, label: 'I will join!' %>
      <div class="form-row">
        <%= f.input :name, wrapper_html: { class: 'col-sm-6' }, placeholder: 'Bilbo' %>
        <%= f.input :last_name, wrapper_html: { class: 'col-sm-6' }, placeholder: 'Baggings' %>
      </div>
      <%= f.input :allergies, label: 'Food allergies & dietary requirements', placeholder: 'Vegan: I dislike Orcs, goblins and Uruk-hai', input_html: { novalidate: true }%>

      <div class="form-row">
        <p class='col-sm-12 mb-1'>Do you need the shuttle?</p>
        <%= f.input :shuttle_to, label: 'From Hotel Barrage to Wedding Venue', wrapper_html: { class: 'col-sm-3' } %>
        <%= f.input :shuttle_from, label: 'From Wedding Venue to Hotel Barrage', wrapper_html: { class: 'col-sm-3' }, input_html: { class: 'col-2'} %>
        <div class="col-sm-3">
          <%= link_to "Shuttle Info", '#', class: "btn btn-outline-primary", role: 'button' %>
        </div>
      </div>
        <%= f.input :child, label: 'I am below 12 years old!'%>

      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
</div>
