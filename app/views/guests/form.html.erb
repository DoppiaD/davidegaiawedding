<div class="modal-body">
  <%= simple_form_for guest, remote: true do |f| %>
  <div class="form-row">
    <%= f.input :name, wrapper_html: { class: 'col-sm-6' }, placeholder: 'Bilbo' %>
    <%= f.input :last_name, wrapper_html: { class: 'col-sm-6' }, placeholder: 'Baggings' %>
  </div>
  <%= f.input :allergies, label: 'Food allergies & dietary requirements', placeholder: 'Vegan: I dislike Orcs, goblins and Uruk-hai', input_html: { novalidate: true }%>
  <div class="form-row">
    <div class="col-12 d-flex justify-content-between align-items-center mb-1">
      <p class="m-0">Will you need the shuttle?</p>
      <%= link_to "Shuttle Info", '#', class: "btn btn-outline-primary", role: 'button' %>
    </div>
    <%= f.input :shuttle_to, label: 'From Hotel Barrage to Wedding Venue', wrapper_html: { class: 'col-5' } %>
    <%= f.input :shuttle_from, label: 'From Wedding Venue to Hotel Barrage', wrapper_html: { class: 'col-6 offset-1' }, input_html: { class: 'col-2'} %>
  </div>
</div>
  <%= f.submit "Close and Save", class: "btn btn-primary", wrapper_html: { class: 'modal-footer' } %>
<% end %>


