<div class="container guests">
  <h1 class="display-1 text-center guests-title">Will you join the party?</h1>

  <div class="row">
    <div class="col">
      <div class="guest-deck">
        <% @guests.each do |guest| %>
          <div class="card guest-card">
            <% grayscale_img = guest.participate ? "" : "guest-grayscale-img" %>
            <%= image_tag "LOTR/Legolas.png", class: "card-img-top #{grayscale_img}", alt: "Legolas" %>
            <% grayscale_bck = guest.participate ? "" : "guest-grayscale-bck" %>
            <div class="card-body <%= grayscale_bck %>">
              <h5 class="card-title"><%= "#{guest.name} #{guest.last_name}" %></h5>
            </div>
            <div class="card-footer">
              <% if guest.participate %>
                <%= content_tag :button, 'EDIT', id: "guest-edit#{guest.id}", data: {guest_id: "#{guest.id}", toggle: "modal", target: "#guestmodal-#{guest.id}"}, class: "btn btn-sm btn-primary btn-guest" %>
                <%= link_to "NO", guest_participate_path(guest, participate: false), id: "guest-no#{guest.id}",method: :patch, class: "btn btn-sm btn-outline-secondary btn-guest", data: {guest_id: "#{guest.id}"}, remote: true %>
              <% else %>
                <%= link_to "YES", guest_participate_path(guest, participate: true), id: "guest-yes#{guest.id}", method: :patch, class: "btn btn-sm btn-outline-primary btn-guest", data: {guest_id: "#{guest.id}"}, remote: true %>
                <%= link_to "NO", guest_participate_path(guest, participate: false), id: "guest-no#{guest.id}",method: :patch, class: "btn btn-sm btn-secondary btn-guest disabled", data: {guest_id: "#{guest.id}"}, remote: true %>
              <% end %>
            </div>
          </div>
          <div class="modal fade" id="guestmodal-<%= guest.id %>" tabindex="-1" role="dialog" aria-labelledby="timelineModal" aria-hidden="true" data-backdrop="static">
            <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Edit RSVP info</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <%= render "edit", guest: guest %>
                </div>
              </div>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>

</div>
